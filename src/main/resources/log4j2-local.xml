<?xml version="1.0" encoding="UTF-8"?>
<Configuration>
    <Appenders>
        <Console name="STDOUT" target="SYSTEM_OUT">
            <PatternLayout pattern="%X{traceId} %-5p %d [%t] %c app=beautyApp version=${releaseVersion} : %m%n"/>
        </Console>
    </Appenders>
    <Loggers>
        <asyncLogger name="org.apache.log4j.xml" level="info"/>
        <asyncLogger name="com.devhopes" level="info"/>
        <asyncLogger name="org.apache" level="ERROR"/>

        <asyncRoot level="info">
            <AppenderRef ref="STDOUT"/>
        </asyncRoot>
    </Loggers>
</Configuration>